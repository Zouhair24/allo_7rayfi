{% block title %} Création d'une annonce{% endblock %}

{% form_theme form 'annonce/_collection.html.twig' %}

{% block body %}

<div class="container">
	<h1>Créer une nouvelle annonce :</h1>
	
	{{ form_start(form) }}
	
	{{ form_widget(form) }}
	
