{% set url =  path('annonces_show', {'slug': annonce.slug}) %}
<div class="col-md-4">
	<div class="card bg-light mb-3">
		<div class="card-header text-center">
			<a href="{{ url }}"> {{ annonce.title }}
			</a> <br> <small>qui a poster l'annonce</small>
		</div>
		<a href="{{ url }}"> <img alt="image de l'artisan"
			src="{{ annonce.coverImage }}"
			style="height: 200px; width: 100%; display: block">
		</a>
		<div class="card-body">
			<h4 class="card-title">
				{{ annonce.price }}
				DH
			</h4>
			<p class="card-text">
				{{ annonce.introduction }}
			</p>
			{% if app.user and app.user == annonce.author %}
				<a href="{{ path('annonces_edit' , {'slug': annonce.slug}) }}" class="btn btn-secondary">Modifier l'annonce</a>
		   		<a href="{{ path('annonces_delete', {'slug': annonce.slug}) }}" class="btn btn-danger" 
				onclick="return confirm(`Êtes vous sur de vouloir supprimer l'annonce ?`)">Supprimer l'annonce</a>
		    {% else %}
				<a href="{{ url }}" class="btn btn-secondary">Voir plus !</a>
		    {% endif %}			
		</div>
	</div>
</div>